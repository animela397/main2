<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0">
    <servers>
        <server>
            <id>github</id>
            <username>${env.MAVEN_PRIVATE_REPO_USERNAME}</username>
            <password>${env.MAVEN_PRIVATE_REPO_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>github</id>
                    <name>Apache Maven Packages</name>
                    <url>${env.MAVEN_PRIVATE_REPO_URL}</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>adobe-releases</id>
            <repositories>
                <repository>
                    <id>adobe-releases</id>
                    <name>Adobe Public Repository</name>
                    <url>https://repo.adobe.com/nexus/content/groups/public</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>github</activeProfile>
        <activeProfile>adobe-releases</activeProfile>
    </activeProfiles>
</settings>